<Window x:Class="Lab05.ClienteFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab05"
        mc:Ignorable="d"
        Title="ClienteFormWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="ID Cliente"/>
            <TextBox x:Name="txtId" Margin="0 5"/>

            <TextBlock Text="Nombre Compañía"/>
            <TextBox x:Name="txtCompania" Margin="0 5"/>

            <TextBlock Text="Nombre Contacto"/>
            <TextBox x:Name="txtContacto" Margin="0 5"/>

            <TextBlock Text="Cargo Contacto"/>
            <TextBox x:Name="txtCargo" Margin="0 5"/>

            <TextBlock Text="Dirección"/>
            <TextBox x:Name="txtDireccion" Margin="0 5"/>

            <TextBlock Text="Ciudad"/>
            <TextBox x:Name="txtCiudad" Margin="0 5"/>

            <TextBlock Text="Región"/>
            <TextBox x:Name="txtRegion" Margin="0 5"/>

            <TextBlock Text="Código Postal"/>
            <TextBox x:Name="txtCodPostal" Margin="0 5"/>

            <TextBlock Text="País"/>
            <TextBox x:Name="txtPais" Margin="0 5"/>

            <TextBlock Text="Teléfono"/>
            <TextBox x:Name="txtTelefono" Margin="0 5"/>

            <TextBlock Text="Fax"/>
            <TextBox x:Name="txtFax" Margin="0 5"/>

            <Button Content="Guardar" Click="BtnGuardar_Click" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
